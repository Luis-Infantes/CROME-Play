@using CromePlayApp.ViewModels
@model IEnumerable<EventEnrollmentViewModel>

<div class="container-style">
    <h2>Inscripción de eventos</h2>
    <h4>@(Model.FirstOrDefault()?.MemberName ?? "Acceso Inscripciones")</h4>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning">@TempData["Message"]</div>
    }

    @if (Model != null && Model.Any())
    {
        <form class="form-style">
            <input type="text" name="searchString" value="@ViewBag.CurrentFilter" placeholder="Buscador de eventos" />
            <button type="submit">Buscar</button>
        </form>


        <table class="table-style">
            <thead>
                <tr>
                    <th>Evento</th>
                    <th>Plazas</th>
                    <th class="filter">
                        <a asp-action="NewEnrollment" asp-route-sortOrder="@ViewBag.Startsort" asp-route-searchString="@ViewBag.CurrentFilter">Inicio</a>
                    </th>
                    <th>Fin</th>
                    <th>Precio</th>
                    <th class="filter">
                        <a asp-action="NewEnrollment" asp-route-sortOrder="@ViewBag.Typesort" asp-route-searchString="@ViewBag.CurrentFilter">Tipo</a>
                    </th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evm in Model)
                {
                    <tr>
                        <td>@evm.EventTitle</td>
                        <td>@evm.AvailablePlace</td>
                        <td>@evm.EventStart?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@evm.EventEnd?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@evm.Price €</td>
                        <td>@evm.EventType</td>
                        <td>
                            @if (evm.IsAlreadyEnrolled)
                            {
                                <span class="text-success">Ya inscrito</span>
                            }
                            else
                            {
                                <form asp-controller="Member" asp-action="NewEnrollment" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="MemberId" value="@evm.MemberId" />
                                    <input type="hidden" name="CalendarEventId" value="@evm.CalendarEventId" />
                                    <input type="hidden" name="GameId" value="@evm.GameId" />

                                    <button type="submit" class="btn btn-primary"
                                            @(evm.AvailablePlace.GetValueOrDefault() <= 0 ? "disabled" : "")>
                                        Inscribirse
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay eventos disponibles.</p>
    }


    <div class="link-group">
        <div class="link-style">
            <a href="@Url.Action("Index")">Volver</a>
        </div>
    </div>


</div>